      "external_api_calls": true,
      "file_system_changes": false
    }
  },
  "project_context": {
    "name": "Carhunter",
    "type": "Next.js TypeScript Application",
    "description": "B2B car search tool for leasing companies and car dealers",
    "primary_sites": [
      "bilbasen.dk",
      "dba.dk", 
      "biltorvet.dk",
      "autotorvet.dk"
    ],
    "deployment": {
      "platform": "Vercel",
      "url": "https://carhunter-lars-projects-3dde7303.vercel.app",
      "auto_deploy": true
    },
    "development_workflow": {
      "test_before_deploy": true,
      "lint_check": true,
      "type_check": true,
      "commit_message_format": "conventional"
    }
  },
  "automation_rules": {
    "sequential_thinking": {
      "auto_use_for_complex_problems": true,
      "min_complexity_threshold": 3,
      "max_thoughts": 10
    },
    "browser_testing": {
      "auto_screenshot_on_errors": true,
      "capture_console_logs": true,
      "test_responsive_design": false
    },
    "deployment": {
      "auto_test_after_deploy": true,
      "wait_for_deployment": 45,
      "verify_functionality": true
    },
    "error_handling": {
      "auto_retry_failed_operations": true,
      "max_retries": 3,
      "capture_debug_info": true
    }
  },
  "safety_limits": {
    "max_file_size_mb": 10,
    "max_concurrent_operations": 5,
    "timeout_seconds": 300,
    "rate_limiting": {
      "api_calls_per_minute": 60,
      "terminal_commands_per_minute": 30
    }
  },
  "notification_preferences": {
    "notify_on_completion": false,
    "notify_on_errors": true,
    "verbose_logging": true,
    "debug_mode": true
  }
}
